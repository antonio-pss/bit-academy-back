# Configurações do banco de dados
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=local_user
POSTGRES_DB=local_db
POSTGRES_PASSWORD=local_password
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Chave secreta do Django (mude para uma valor seguro em produção)
SECRET_KEY=123456

# Debug habilitado para desenvolvimento
DJANGO_ENV=development
DEBUG=True

# JWT - Tempo de validade dos tokens (em minutos/dias)
JWT_ACCESS_LIFETIME_MINUTES=60
JWT_REFRESH_LIFETIME_DAYS=7

# MinIO (para armazenamento de mídia)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=media
MINIO_SECURE=False
MINIO_BASE_URL=http://localhost:9000

# Configurações do Google OAuth (adicione suas credenciais reais)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_SECRET_KEY=YOUR_GOOGLE_SECRET_KEY

# Configurações do GitHub OAuth (adicione suas credenciais reais)
GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
GITHUB_SECRET_KEY=YOUR_GITHUB_SECRET_KEY

